%h1= @book.title
%p
  %strong Price:
  $#{@book.price}
  %br/
  %strong Subject:
  = link_to Subject.find(@book.subject_id).name, action: "show", controller: 'subjects', id: @book.subject_id
  %br/
  %strong Publisher:
  = link_to @book.publisher.name, action: "show", controller: 'publishers', id: @book.publisher.id
  %br/
  - if @book.copies.blank?
    %p This book has no copies.
  - else
    %table
      %tr
        %th Copy
        %th Library
      - @book.copies.each do |c|
        %tr
          %td=c.name
          %td
            = link_to c.library_location.name, action: "show", controller: 'library_locations', id: c.library_location_id
  %p= link_to "Add Copies",  trestle.new_copies_admin_path
%p= "Description: " + @book.description
%hr/
= link_to "Edit Book", trestle.edit_books_admin_path(@book.id)
%br/
%br/
= link_to 'Back', {:action => 'index'}

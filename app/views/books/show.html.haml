%h1= @book.title
%p
  %strong Price:
  $#{@book.price}
  %br/
  %strong Subject(s):
  - @book.subjects.each do |s|
    = link_to s.name, subject_path(s.id)
  %br/
  %strong Created Date:
  = @book.created_at
  %br/
%p= @book.description
%hr/
= link_to "Edit Book", trestle.edit_books_admin_path(@book.id)
%br/
%br/
= link_to 'Back', {action: 'index'}
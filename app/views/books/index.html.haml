%ul#subjects
  - Subject.find_each do |c|
    %li= link_to c.name, action: "show", controller: "subjects", id: c.id
  %li
    = link_to "Add new Subject", trestle.new_subjects_admin_path
- if @books.blank?
  %p There are not any books currently in the system.
- else
  %p These are the currently books in our system
  %ul#books
    - @books.each do |c|
      %li
        = link_to c.title, {action: 'show', id: c.id}
        %b
          = link_to "Edit", trestle.edit_books_admin_path(c)
        %b
          = link_to 'Delete', book_path(c), method: :delete, data: {confirm: "Are you sure you want to delete this item?" }
%p= link_to "Add new Book", trestle.new_books_admin_path

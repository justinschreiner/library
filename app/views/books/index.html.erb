<ul id = "subjects">
   <% Subject.find_each do |c| %>
   <li><%= link_to c.name, action: "show", controller: "subjects", id: c.id %></li>
   <% end %>
   <li> <%= link_to "Add new Subject", trestle.new_subjects_admin_path %> </li>
</ul>

<% if @books.blank? %>
<p>There are not any books currently in the system.</p>
<% else %>
<p>These are the currently books in our system</p>

<ul id = "books">
   <% @books.each do |c| %>
   <li>
    <%= link_to c.title, {action: 'show', id: c.id} %>
    <b> <%= link_to "Edit", trestle.edit_books_admin_path(c) %> </b>
    <b> <%= link_to 'Delete', book_path(c), method: :delete, data: {confirm: "Are you sure you want to delete this item?" }%> </b>
   </li>
   <% end %>
</ul>

<% end %>
<p><%= link_to "Add new Book", trestle.new_books_admin_path %></p>